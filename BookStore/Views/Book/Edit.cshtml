@model BookStore.Models.Book

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit</h2>
<form action="Edit" method="post">
    <div class="form-horizontal">
        <h4>Book</h4>
        <hr />
        @Html.HiddenFor(model => model.bookID)
        <div class="form-group">
            <label class="control-label col-md-2">Book Title</label>
            <div class="col-md-10">
                <input type="text" value="@Model.title" name="title" />
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Book Genre</label>
            <div class="col-md-10">
                <input type="text" value="@Model.Genre" name="Genre" />
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Book Price</label>
            <div class="col-md-10">
                <input type="number" value="@Model.price" name="price" />
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </div>
    </div>
</form>

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
